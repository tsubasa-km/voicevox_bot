{
  "name": "voicevox-bot",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.json && npx --yes tsc-alias --project tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "start:deploy": "npm run deploy:commands && node --enable-source-maps dist/index.js",
    "dev": "tsx watch src/index.ts",
    "deploy:commands": "tsx scripts/deploy-commands.ts"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@snazzah/davey": "^0.1.7",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3",
    "better-sqlite3": "^12.4.1",
    "tslib": "^2.8.1",
    "@hono/node-server": "^1.9.0",
    "hono": "^4.3.7"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
